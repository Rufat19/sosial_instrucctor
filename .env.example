# Telegram Bot üçün əsas dəyişənlər
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_admin_id_here

# Database bağlantısı (əgər istifadə olunur)
DATABASE_URL=postgres://user:password@host:port/dbname

# Redis və ya Celery üçün (əgər sonradan əlavə ediləcəksə)
REDIS_URL=redis://localhost:6379/0

# Webhook və ya host məlumatı (Railway / Render / Fly.io)
WEBHOOK_HOST=https://your-domain.onrender.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=random_secret_string

# Dil / Mode / Debug
LANGUAGE=az
MODE=development
DEBUG=True
